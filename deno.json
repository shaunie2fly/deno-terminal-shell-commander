{
  "fmt": {
    "useTabs": true,
    "lineWidth": 165,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "build:types": "deno check mod.ts",
    "test": "deno test --allow-all src/tests/",
    "coverage": "deno test --coverage=coverage --allow-all && deno coverage coverage --lcov --output=lcov.info"
  },
  "test": {
    "files": {
      "include": ["src/tests/"]
    }
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.ns", "deno.unstable"]
  },
  "imports": {
    "@bartlomieju/postgres": "jsr:@bartlomieju/postgres@0.17.2",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@std/events": "node:events",
    "@std/ws": "jsr:@std/ws@^0.218.2",
    "@terminal-shell": "./src",
    "runtypes": "npm:runtypes@6.7.0"
  },
  "exclude": [
    "usr-data-dir/**",
    "docs/**"
  ]
}
