{
  "fmt": {
    "useTabs": true,
    "lineWidth": 165,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  },
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "test": {
    "files": {
      "include": ["src/tests/"]
    }
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.ns", "deno.unstable"]
  },
  "imports": {
    "@bartlomieju/postgres": "jsr:@bartlomieju/postgres@0.17.2",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "runtypes": "npm:runtypes@6.7.0",
    "@zaubrik/djwt": "jsr:@zaubrik/djwt@^3.0.2",
    "@qdrant/js-client-rest": "npm:@qdrant/js-client-rest",
    "@cliffy/keypress": "jsr:@cliffy/keypress@1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.7",
    "@cliffy/ansi": "jsr:@cliffy/ansi@1.0.0-rc.7",
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.7",
    "@cliffy/table": "jsr:@cliffy/table@1.0.0-rc.7",
    "deno_tui": "https://deno.land/x/tui@2.1.11/mod.ts"
  },
  "exclude": [
    "usr-data-dir/**",
    "docs/**"
  ]
}
