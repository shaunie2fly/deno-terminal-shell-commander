{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "deno",
        "command": "run --inspect --allow-all --unsafely-ignore-certificate-errors",
        "args": [
          "mod.ts"
        ],
        "problemMatcher": [
          "$deno"
        ],
        "label": "deno: run"
      },
      {
        "label": "deno test : Collect Coverage Profile",
        "type": "shell",
        "command": "rm ./coverage/*.json ; deno test ./src --coverage=coverage --allow-all",
        "windows": {
          "command": "deno test ./src --coverage=coverage --allow-all"
        },
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "deno test: Generate an lcov Report",
        "type": "shell",
        "command": "deno coverage cov_profile --lcov ./coverage  --output=lcov.info",
        "windows": {
          "command": "deno coverage cov_profile --lcov ./coverage  --output=lcov.info"
        },
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "deno test: Build an HTML Coverage Report",
        "type": "shell",
        "command": "genhtml -o ./coverage/html lcov.info",
        "windows": {
          "command": "genhtml -o ./coverage/html lcov.info"
        },
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      }
    ]
  }